'''Script for building the cffi part manually. This scirpt is optional and can
be deleted if desired. '''


import argparse
from pythonapi.cffibuilder import cffibuilder

USAGE = """Creates the cffi libaries from the dftbplus header and shared
libary."""


def main():
    '''Main driver routine for cffibuilder.'''

    parser = argparse.ArgumentParser(description=USAGE)

    helpstring = 'dftbplus header file'
    parser.add_argument('header', help=helpstring)
    helpstring = 'dftbplus shared libary'
    parser.add_argument('libary', help=helpstring)

    args = parser.parse_args()

    cffibuilder(args.header, args.libary)

if __name__ == "__main__":
    main()
